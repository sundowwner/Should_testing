{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "compileOnSave": true,
    "buildOnSave": false,
    "files": [
        "public/javascript/app.ts",
        "public/javascript/controllers/HomeController.ts",
        "public/javascript/services/HomeService.ts",
        "public/javascript/services/HTTPFactory.ts",
        "server.ts",
        "typings/angularjs/angular-resource.d.ts",
        "typings/angularjs/angular-route.d.ts",
        "typings/angularjs/angular.d.ts",
        "typings/body-parser/body-parser.d.ts",
        "typings/cookie-parser/cookie-parser.d.ts",
        "typings/express/express.d.ts",
        "typings/jquery/jquery.d.ts",
        "typings/mime/mime.d.ts",
        "typings/mongoose/mongoose.d.ts",
        "typings/morgan/morgan.d.ts",
        "typings/node/node.d.ts",
        "typings/serve-favicon/serve-favicon.d.ts",
        "typings/serve-static/serve-static.d.ts",
        "typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
